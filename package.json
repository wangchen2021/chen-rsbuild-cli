{
  "name": "@wangchen2021/chen-rsbuild-cli",
  "version": "0.0.6",
  "description": "React+RSBuild+TS Chen CLI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "prepublishOnly": "pnpm run build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "eslint .",
    "git:commit": "git add . && npx cz",
    "git:push": "git push",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "link:global": "pnpm run build && pnpm link --global",
    "unlink:global": "pnpm unlink --global",
    "prepare": "husky"
  },
  "bin": {
    "chen-rsbuild-cli": "./dist/index.js"
  },
  "keywords": [
    "cli",
    "react",
    "rsbuild",
    "typescript",
    "scaffold"
  ],
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "author": "Wang Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangchen2021/chen-rsbuild-cli.git"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "!templates/**/*": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "download-git-repo": "^3.0.2",
    "ejs": "^4.0.1",
    "inquirer": "^13.3.0",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-angular": "latest",
    "@commitlint/format": "^20.4.0",
    "@commitlint/types": "^20.4.0",
    "@eslint/js": "^10.0.1",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.3.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "fs-extra": "^11.3.3",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "engines": {
    "node": "24.x",
    "pnpm": ">=9.0.0"
  }
}
